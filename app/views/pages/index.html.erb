<script src="https://code.jquery.com/jquery-3.2.1.js"></script>
<script type="text/javascript">
  $(function() {
    $('#slide_bar').hover(
      // スライドバーにカーソルを合わせると、左にスライドし、メニューが現れる
      function(){
        $(this).animate({'marginRight':'170px'},500);
      },
      // 合わせていなければ、メニューが隠れる
      function () {
        $(this).animate({'marginRight':'0'},500);
      }
    );
  });
</script>

<div id="slide_bar">
